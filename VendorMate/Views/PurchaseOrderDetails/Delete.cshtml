@model VendorMate.Models.PurchaseOrderDetails

@{
    ViewData["Title"] = "Delete Purchase Order Detail";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />
<div>
    <h5>Purchase Order Detail</h5>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ID</dd>
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderID</dd>
        <dt class="col-sm-2">Material ID</dt>
        <dd class="col-sm-10">@Model.MaterialID</dd>
        <dt class="col-sm-2">Item Quantity</dt>
        <dd class="col-sm-10">@Model.ItemQuantity</dd>
        <dt class="col-sm-2">Item Rate</dt>
        <dd class="col-sm-10">@Model.ItemRate.ToString("C")</dd>
        <dt class="col-sm-2">Item Notes</dt>
        <dd class="col-sm-10">@Model.ItemNotes</dd>
        <dt class="col-sm-2">Expected Date</dt>
        <dd class="col-sm-10">@Model.ExpectedDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

    
</div>


