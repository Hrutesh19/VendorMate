@model VendorMate.Models.MaterialMaster

@{
    ViewData["Title"] = "Delete Material Master";
}

<h1>Delete Material Master</h1>

<h4>Are you sure you want to delete this?</h4>
<div>
    <h4>MaterialMaster</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ID</dd>
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Code</dd>
        <dt class="col-sm-2">Short Text</dt>
        <dd class="col-sm-10">@Model.ShortText</dd>
        <dt class="col-sm-2">Long Text</dt>
        <dd class="col-sm-10">@Model.LongText</dd>
        <dt class="col-sm-2">Unit</dt>
        <dd class="col-sm-10">@Model.Unit</dd>
        <dt class="col-sm-2">Reorder Level</dt>
        <dd class="col-sm-10">@Model.ReorderLevel</dd>
        <dt class="col-sm-2">Min Order Quantity</dt>
        <dd class="col-sm-10">@Model.MinOrderQuantity</dd>
        <dt class="col-sm-2">Is Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ID" />
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
